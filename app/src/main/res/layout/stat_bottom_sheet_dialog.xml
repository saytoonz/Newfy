<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#212121"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ProgressBar
        android:id="@+id/pbar"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

   <LinearLayout
       android:id="@+id/main"
       android:visibility="invisible"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:clickable="true"
           android:focusable="true"
           android:foreground="?selectableItemBackground"
           android:orientation="horizontal"
           android:paddingStart="16dp"
           android:paddingEnd="16dp">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_favorite_red_24dp" />

           <TextView
               android:id="@+id/smiles"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginStart="16dp"
               android:text="@string/s_people_have_smiled_for_this_post"
               android:textColor="#FFF" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:clickable="true"
           android:focusable="true"
           android:foreground="?selectableItemBackground"
           android:orientation="horizontal"
           android:paddingStart="16dp"
           android:paddingEnd="16dp">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_bookmark_white_24dp" />

           <TextView
               android:id="@+id/saves"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginStart="16dp"
               android:text="@string/s_people_have_saved_this_post"
               android:textColor="#FFF" />

       </LinearLayout>

   </LinearLayout>

</FrameLayout>